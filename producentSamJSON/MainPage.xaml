<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="producentSamJSON.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Entry x:Name="entMarka"
                   WidthRequest="500"
                   HorizontalTextAlignment="Center"/>
            <Button Clicked="onDataDownloadClicked"
                    Text="Wyszukaj Markę w Bazie Danych"
                    WidthRequest="250"/>
            <Label x:Name="lblDane"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
